<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="_2" Content="이름을 입력하세요!" HorizontalAlignment="Left" Height="77" Margin="36,132,0,0" VerticalAlignment="Top" Width="307" RenderTransformOrigin="0.5,0.5" FontSize="24">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.052"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="70" Margin="291,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="235" SpellCheck.IsEnabled="True" FontSize="24"/>
        <Button x:Name="htnSayHello" Content="Button" HorizontalAlignment="Left" Height="70" Margin="550,118,0,0" VerticalAlignment="Top" Width="176" Click="htnSayHello_Click"/>

    </Grid>
</Window>
